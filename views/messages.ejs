<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <%= title %>
    <% if (!isMember) { %>
        <br>
        <a href="/members/enroll">Unlock member features </a>
    <% } %>
    <br>
    <form action="/logout" method="POST">
        <button type="submit">Logout</button>
    </form>
    <br>
    <a href="/messages/add">New Message</a>
    <ul>
        <% messages.forEach(message => { %>
            <li>
                <h2><%= message.title %></h2>
                <p><%= message.msg %></p>
                <% if (isMember == true) { %>
                    <p>Added: <%= message.date_added %></p>
                    <p>By: <%= message.first_name %>  <%= message.last_name %></p>
                <% } %>
                <% if (isAdmin == true) { %>
                    <form action="/messages/<%= message.id %>/delete" method="POST">
                        <button type="submit">Delete</button>
                    </form>
                <% } %>
            </li>
        <% }) %>
    </ul>
</body>
</html>